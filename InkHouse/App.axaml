<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InkHouse.App"
             xmlns:local="using:InkHouse"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://InkHouse/Styles/GlobalStyles.axaml"/>
        <StyleInclude Source="avares://InkHouse/Styles/DashboardStyles.axaml"/>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text, SF Pro Display, Helvetica Neue, Helvetica, -apple-system, BlinkMacSystemFont, Microsoft YaHei, SimSun, Arial"/>
        </Style>
    </Application.Styles>
</Application>