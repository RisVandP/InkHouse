<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InkHouse.App"
             xmlns:local="using:InkHouse"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://InkHouse/Styles/GlobalStyles.axaml"/>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Noto Sans CJK SC, Noto Sans CJK TC, Noto Sans CJK JP, Noto Sans CJK KR, Source Han Sans CN, Source Han Sans TC, Source Han Sans JP, Source Han Sans KR, PingFang SC, PingFang TC, Hiragino Sans GB, Microsoft YaHei, SimSun, Arial Unicode MS, Arial"/>
        </Style>
    </Application.Styles>
</Application>